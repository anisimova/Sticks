<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<style type="text/css">
		body{
			background-color: #dcf5e1;
		}
		div.osn{
			width: 350px;
			margin: 20px auto;
			text-align: center;
			border: 4px solid #00960e;
			background-color: #b9f5b3;
			border-radius: 10px;
			height: 250px;
			padding: 10px;
		}
		.bat{
			height: 30px;
			width: 5px;
			margin: 2px;
			background-color: #00960e;
			float: left;
			border-radius: 2px;
		}
		</style>
	</head>
	<body>
		<div class="osn">
			<script>
				var searchstr=window.location.search.toString();
				var arr=new Array(4);
				var str=searchstr;
				var num=0;
				for(var i=0;i<4;i++){
					num=str.indexOf("=");
					str=str.substr(num+1);
					arr[i]=parseInt(str);
					}	
				count=arr[2];
				document.write('<p>Ход сервера:</p>');
				for (var j=0; j<arr[1]; j++){
					document.write('<div class="bat"></div>');
					}
				document.write('<br>');
				if (arr[0]<=0) {
					alert('Браузер выиграл');
					window.location = '/welcome/index/?win=Browser&c=' + count + '&id=' + arr[3];
					}
				else{
					count++;
					var a;
					var key= Math.random();
					if (arr[0]==3) {
						a=2;
						} 
					else if ((arr[0]==2)||(arr[0]==1)) {
						a=1;
						} 
					else {
						if (key<=0.33) {
							a=1;
						}
						if ((key>0.33)&&(key<0.66)) {
							a=2;
						}
						if (key>0.66) {
							a=3;
						}
					}
					document.write('<p>Ход браузера:</p>');
					for (var j=0; j<a; j++){
						document.write('<div class="bat"></div>');
						}
					document.write('<br>');
					arr[0]=arr[0]-a;
					document.write('<p>Оставшиеся палочки:</p>');
					for (var j=0; j<arr[0]; j++){
						document.write('<div class="bat"></div>');
						}
					if (arr[0]<=0) {
						alert('Сервер выиграл');
						window.location = '/welcome/index/?win=Server&c='+ count + '&id=' + arr[3];
						}
					else {
						window.location = "/welcome/redirector"+ "?a=" + arr[0] + "&b=" + a + "&c=" + count + "&id=" + arr[3];
						}
					}
			</script>
		</div>
	</body>
</html>